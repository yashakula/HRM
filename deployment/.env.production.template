# Production Environment Configuration Template
# Copy this file to .env.production and update values for your production environment
# IMPORTANT: Use secure passwords and proper domains in production

# Database Configuration
# SECURITY: Use strong, unique passwords in production!
POSTGRES_DB=hrms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_database_password_here
DATABASE_URL=postgresql://postgres:your_secure_database_password_here@database:5432/hrms

# API URLs for Production
# For testing production mode locally (internal Docker network):
NEXT_PUBLIC_API_URL=http://backend:8000
# For actual production deployment, update with your domain:
# NEXT_PUBLIC_API_URL=https://yourdomain.com

# Backend CORS Configuration
# Update with your actual production domain
BACKEND_CORS_ORIGINS=https://yourdomain.com

# Application Settings
NODE_ENV=production
CREATE_SEED_DATA=false

# Production Security
DEBUG=false
VERBOSE_LOGGING=false

# Additional Production Variables (uncomment and configure as needed)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key
# BACKUP_SCHEDULE=0 2 * * *  # Daily backup at 2 AM

# Session Security (add secure session secret)
# SESSION_SECRET=your_long_random_session_secret_here