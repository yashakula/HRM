# Cloudflare Tunnel Environment Configuration Template
# Copy this file to .env.tunnel and fill in your actual values
# NEVER commit .env.tunnel to git - it contains sensitive tokens!

# Database Configuration
POSTGRES_DB=hrms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mysecretpassword
DATABASE_URL=postgresql://postgres:mysecretpassword@database:5432/hrms

# Cloudflare Tunnel Configuration
# Get your tunnel token from: https://dash.cloudflare.com > Zero Trust > Networks > Tunnels
# SECURITY WARNING: Never commit the actual token to git!
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here
TUNNEL_DOMAIN=your_domain.com

# API URLs for Tunnel Deployment
# Replace with your actual tunnel domain
NEXT_PUBLIC_API_URL=https://your_domain.com

# Backend CORS Configuration for Tunnel
# Replace with your actual tunnel domain
BACKEND_CORS_ORIGINS=https://your_domain.com,https://your_domain.com:443

# Cookie Configuration for Tunnel
COOKIE_SECURE=true
COOKIE_SAMESITE=none
COOKIE_DOMAIN=.your_domain.com

# Application Settings
NODE_ENV=production
CREATE_SEED_DATA=false

# Security Settings for Tunnel
HTTPS_ONLY=true
SECURE_COOKIES=true
TUNNEL_MODE=true

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=none
SESSION_COOKIE_HTTPONLY=true

# Development/Debug (set to false for production)
DEBUG=false
VERBOSE_LOGGING=true