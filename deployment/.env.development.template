# Development Environment Configuration Template
# Copy this file to .env.development for local development
# Safe to use default values for development

# Database Configuration
POSTGRES_DB=hrms
POSTGRES_USER=postgres
POSTGRES_PASSWORD=mysecretpassword  # Use secure password in production
DATABASE_URL=postgresql://postgres:mysecretpassword@database:5432/hrms

# API URLs for Development (localhost)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend CORS Configuration (allow all localhost variations)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://0.0.0.0:3000

# Application Settings
NODE_ENV=development
CREATE_SEED_DATA=true

# Development Features
DEBUG=true
VERBOSE_LOGGING=true